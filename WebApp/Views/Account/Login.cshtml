@model WebApp.Models.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="background">
    <div class="Account">
        <h1 class="login-h1">Login</h1>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="info-text"></label>
                <input asp-for="Email" class="form-control" placeholder="Your email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="info-text"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="terms-conditions-container">
                <input asp-for="RememberMe" type="checkbox" class="custom-checkboxLogin" id="remember" />
                <label for="remember">Remember me</label>
            </div>

            <div class="btn-login">
                <button type="submit" class="btn btn-blue btn-login">Log In</button>
            </div>
        </form>
        <p class="create-paragh">
            Don't have an account?
            <a asp-controller="Account" asp-action="Register" class="link-no-underline">Sign Up!</a>
        </p>
    </div>
</div>
