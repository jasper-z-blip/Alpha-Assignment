@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="CSS/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>
<body>
    <div class="HomePage wrapper">
        <header class="header">
            Welcome to Alpha! The site for documenting your projects.
        </header>
        <main class="main">
            <a class="alphaBoxStartPage" href="#">
                <img class="alphaLogo" src="images/AlphaLogo.svg" alt="Alpha Logotype">
                <h2 class="alpha-text">alpha</h2>
            </a>

            <div class="button-wrapper hidden">
                <div class="home-login">
                    <a asp-controller="Account" asp-action="Login" class="loginBtn">Login</a>
                </div>
                <div class="home-register">
                    <a asp-controller="Account" asp-action="Register" class="regBtn">Register</a>
                </div>
            </div>
        </main>

        <footer class="footer">
            Made by Jasper
        </footer>
    </div>

    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
          const buttons = document.querySelector('.button-wrapper');

          setTimeout(() => {
          buttons.classList.remove('hidden');
          }, 2900);
        });

    </script>
</body>
</html>
